<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 id="titulo_firmante"> Categorias 
      <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1">
        <span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span>
      </button>
    </h1>

    <div id="form-toggle">
      <%= render 'form' %>
    </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Categoria</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categorias.each do |categoria| %>
        <tr>
          <td><%= categoria.descripcion %></td>
          <td><%= link_to 'Show', categoria %></td>
          <td><%= link_to 'Edit', edit_categoria_path(categoria) %></td>
          <td><%= link_to 'Destroy', categoria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>