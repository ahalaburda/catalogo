<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 id="titulo_firmante"> Marcas 
      <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1">
        <span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span>
      </button>
  </h1>

  <div id="form-toggle">
      <%= render 'form' %>
  </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Marca</th>
        <th>Modelo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @marcas.each do |marca| %>
        <tr>
          <td><%= marca.descripcion %></td>
          <td><%= marca.modelo.nombre_modelo %></td>
          <td><%= link_to 'Show', marca %></td>
          <td><%= link_to 'Edit', edit_marca_path(marca) %></td>
          <td><%= link_to 'Destroy', marca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>