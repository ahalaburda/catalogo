<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 id="titulo_firmante"> Modelos 
      <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1">
        <span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span>
      </button>
  </h1>

  <div id="form-toggle">
      <%= render 'form' %>
  </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Modelos</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @modelos.each do |modelo| %>
        <tr>
          <td><%= modelo.descripcion %></td>
          <td><%= link_to 'Show', modelo %></td>
          <td><%= link_to 'Edit', edit_modelo_path(modelo) %></td>
          <td><%= link_to 'Destroy', modelo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>