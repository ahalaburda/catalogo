<div class="container">
    <p id="notice"><%= notice %></p>

    <h1 id="titulo_firmante"> Proveedores 
      <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1">
        <span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span>
      </button>
    </h1>

    <div id="form-toggle">
      <%= render 'form' %>
    </div>

    <table class="table table-hover table-striped">
      <thead>
          <tr>
              <th>Descripcion</th>
              <th>Direccion</th>
              <th>Sucursal</th>
              <th>Vendedor</th>
              <th>Telefono</th>
              <th>Celular</th>
              <th>Email</th>
              <th colspan="3"></th>
          </tr>
      </thead>
      <tbody>
        <% @proveedores.each do |proveedor| %>
            <tr>
                <td><%= proveedor.descripcion %></td>
                <td><%= proveedor.direccion %></td>
                <td><%= proveedor.sucursal %></td>
                <td><%= proveedor.vendedor %></td>
                <td><%= proveedor.telefono %></td>
                <td><%= proveedor.celular %></td>
                <td><%= proveedor.email %></td>
                <td><%= link_to 'Show', proveedor %></td>
                <td><%= link_to 'Edit', edit_proveedor_path(proveedor) %></td>
                <td><%= link_to 'Destroy', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
</div>